using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ProjectEuler
{
    class _01_Multiples_of_3_and_5
    {
        static void Main(string[] args)
        {
            int limit = 1000;
            int reault = solucion(limit);
            Console.WriteLine(reault);
            Console.ReadKey();
        }

        private static int solucion(int limit)
        {
            int sum = 0;
            for (int i = 0; i < limit; i++)
            {
                if (i % 3 == 0 || i % 5 == 0)
                {
                    sum += i;
                }
            }
            return sum;
        }
    }
}
