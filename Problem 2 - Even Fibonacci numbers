using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ProjectEuler
{
    class _02_Even_Fibonacci_numbers
    {
        static void Main(string[] args)
        {
            var result = solution();

            Console.WriteLine(result);
            Console.Read();
        }


        static string solution()
        {
            int sum = 0;
            int  b = 1;
            int a = 0;
            int aux = 0;

            int length = 4000000;

            while (sum <= length)
            {
                aux = a;
                a = b;
                b = aux + a;
                Console.WriteLine(a + " sum: " + sum);
                sum += a;
            }
            return "ok";
        }


        public String run()
        {
            int sum = 0;
            int x = 1;  // Represents the current Fibonacci number being processed
            int y = 2;  // Represents the next Fibonacci number in the sequence
            while (x <= 4000000)
            {
                if (x % 2 == 0)
                    sum += x;
                int z = x + y;
                x = y;
                y = z;
            }
            return sum.ToString();
        }

    }
}
